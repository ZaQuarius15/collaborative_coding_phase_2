
<h2>Sign-in</h2>

<h3> -or- </h3>

<div class = "flash">

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
      <%= error %>
    <% end %>
<% end %>

</div>

<div class = "form">

<%= link_to "create new profile", "/users/new" %><br><br>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>

  <%= text_field_tag :name, "", :placeholder => "Name" %><br><br>
  <%= password_field_tag :password, "", :placeholder => "Password" %><br><br>
  <%=submit_tag 'log in'%>

<% end %>

