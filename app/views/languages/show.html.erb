<h1><%= @language.name %></h1>

<%= image_tag @language.img_url, :size => "180x180" %>

<h3><%= @language.description %></h3>

<h4><%= @language.name %> Topics:</h4>
<uL>
    <% @language.topics.each do |topic| %>
        <%= link_to topic.title, events_path(:language => @language, :topic => topic) %><br>
    <% end %>
</ul>