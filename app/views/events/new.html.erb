<h1>Create a New Event!</h1>

<h4><em>Ready to host an event of your own? That's right you are!</em></h4>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @event do |f| %>
    <%= f.label :language %>
    <%= f.collection_select :lang_topic_id, @lang_topics.sorted_list, :id, :display_lt %>


    <%= f.submit %>

<% end %>

