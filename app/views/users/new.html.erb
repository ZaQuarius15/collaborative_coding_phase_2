<h1>Create a New Profile</h1>

<h4><em>Your collaborative learning journey starts today!</em></h4>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color:red"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :password %><br>
    <%= f.text_field :password %><br><br>

    <%= f.label :bio %><br>
    <%= f.text_area :bio %><br><br>

    <%= f.submit %>
<% end %>

    